@model MovieApp.Web.Models.Account.ResetPasswordModel

<div class="container padding-bottom-3x mb-2 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="forgot">

                <h2>Şifremi Sıfırla?</h2>
                <p>Üç kolay adımda şifrenizi değiştirin. Bu, şifrenizi korumanıza yardımcı olacaktır!</p>
                <ol class="list-unstyled">
                    <li><span class="text-primary text-medium">1. </span>E-posta adresinizi aşağıya girin.</li>
                    <li><span class="text-primary text-medium">2. </span>Sistemimiz size geçici bir bağlantı gönderecek</li>
                    <li><span class="text-primary text-medium">3. </span>Şifrenizi sıfırlamak için bağlantıyı kullanın</li>
                </ol>

            </div>

            <form asp-controller="Security" asp-action="ForgotPassword" method="post" class="card mt-4">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Email">Enter your email address</label>
                        <input asp-for="Email" class="form-control" type="text" id="email-for-pass" required=""><small class="form-text text-muted">MovieApp.com'a kayıt sırasında kullandığınız e-posta adresini girin. Sonra bu adrese bir bağlantı göndereceğiz.</small>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Yeni Şifre Oluştur</button>
                    <a class="btn btn-danger" href="/Security/Login">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>